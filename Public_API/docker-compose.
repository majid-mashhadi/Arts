version : '3.4'

networks:
    dev:
        driver: bridge

services:
    demo-app:
        image: docker.io/majidmashhadi/artapi:v1
        depends_on:
            - "app_db"
        container_name: artapi-services
        ports:
            - "8088:80"
        build:
            context: .
            dockerfile: Dockerfile
        environment:
            - ConnectionStrings__DefaultConnection=server=app_db;port=3305;database=APP;user=root;password=MySql2023;
            - ASPNETCORE_URLS=http://+80
#        network:
#            - dev

    app_db:
        image: mysql:latest
        container_name: app_db
        environment:
            - user=root
            - password=MySql2023
        ports:
            - "3306:3305"
        restart: alwyas
        volumes:
            - app_data:/var/lib/mysql/data
        networks:
            - dev

volumes:
    app_data: 


